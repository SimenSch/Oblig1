@model WebApplication2.Model.bruker
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        


            <fieldset>

                @if (ViewBag.Innlogget)
                {
                    <h5 style="color:blue"><strong>Logget inn</strong></h5>
                }
                else
                {
                    <h5 style="color:red"><strong>Ikke logget inn</strong></h5>
                
                }
                <legend>Logg inn</legend>

                <div class="editor-label">
                    @Html.LabelFor(model => model.brukerId)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.brukerId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.brukerId)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.passord)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.passord, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.passord)
                </div>

                <p>
                    <br />
                    <a href="/Home/index">
                        <input type="button" value="Tilbake til bestilling av flybilletter" class="btn-danger" />
                    </a>
                    <input type="submit" value="Logg inn" class="btn-success" />

                </p>

            </fieldset>

    }

    <div>
        @Html.ActionLink("Hjemmeside", "Index") <br />
        @Html.ActionLink("Registrer bruker", "BrukerRegisstrering") <br />
        @Html.ActionLink("Innlogget side", "InnLoggetSide") <br />
    </div>
</body>
</html>